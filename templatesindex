<body>
    <div class="container">
        <h1>Калькулятор</h1>
        <input type="number" id="osn" placeholder="Основной блин (квадрат)">
        <input type="number" id="otv" placeholder="Отверстие под трубку">
        <input type="number" id="ras" placeholder="Расстояние между отверстиями">
        <input type="number" id="kra" placeholder="Расстояние до края">
        <button onclick="calculate()">Рассчитать</button>
        
        <h2>Результат:</h2>
        <p id="result"></p>
    </div>
    
    <script>
        function calculate() {
            var osn = parseInt(document.getElementById("osn").value);
            var otv = parseInt(document.getElementById("otv").value);
            var ras = parseInt(document.getElementById("ras").value);
            var kra = parseInt(document.getElementById("kra").value);
            
            var dost_d = osn - 2 * kra;
            var kolvo = dost_d / (otv + ras);
            kolvo = parseInt(kolvo);
            var answer = kolvo ** 2;
            
            document.getElementById("result").textContent = `Результат: ${answer}`;
        }
    </script>
